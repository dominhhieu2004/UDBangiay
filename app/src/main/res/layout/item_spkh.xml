<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sp"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/xehang"
                android:id="@+id/images_sp_kh"
                android:layout_margin="20dp"
                />

            <TextView
                android:textStyle="bold"
                android:id="@+id/sp_maSP_kh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã Sản Phẩm : "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>


            <TextView
                android:id="@+id/sp_tenSP_kh"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Tên Sản Phẩm"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/sp_hangSP_kh"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Hang Sản Phẩm"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

<!--            <Spinner-->
<!--                android:background="#00000000"-->
<!--                android:id="@+id/spinner_Hang"-->
<!--                android:layout_margin="5dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"/>-->

            <TextView
                android:textStyle="bold"
                android:id="@+id/sp_giatien_kh"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gia tiền :          "
                android:textSize="16sp"
                android:textColor="#FF0031"
                android:layout_margin="5dp"/>

            <TextView
                android:textStyle="bold"
                android:id="@+id/sp_soLuong_kh"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng :          "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>

            <TextView
                android:textStyle="bold"
                android:id="@+id/sp_moTa_kh"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô Tả :          "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>